# Pulse Trading Signals App - Environment Configuration
# Copy this file to .env and fill in your actual values

# ====== APPLICATION SETTINGS ======
APP_ENV=development
# Options: development, staging, production

# ====== POCKETBASE CONFIGURATION ======
POCKETBASE_URL=http://localhost:8090
# For production: https://your-domain.com or your server IP

# PocketBase Admin Credentials (for automated setup)
POCKETBASE_ADMIN_EMAIL=admin@pulse.com
POCKETBASE_ADMIN_PASSWORD=secure_password_here

# ====== ALPACA MARKET DATA API ======
# Get these from: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_WS_URL=wss://stream.data.alpaca.markets/v2/iex

# ====== OAUTH CREDENTIALS ======

# Google OAuth (for Google Sign-In)
# Get these from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Apple OAuth (for Sign in with Apple)
# Get these from: https://developer.apple.com/
APPLE_SERVICE_ID=your.apple.service.id
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID

# ====== FIREBASE CONFIGURATION ======
# For push notifications and analytics
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_API_KEY=your_firebase_api_key

# ====== ADDITIONAL MARKET DATA APIS ======
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
POLYGON_API_KEY=your_polygon_api_key

# ====== PAYMENT PROCESSING (for dynamic signals) ======
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ====== DEVELOPMENT SETTINGS ======
DEBUG_LOGGING=true
USE_MOCK_DATA=false
TEST_USER_EMAIL=test@pulse.com
TEST_USER_PASSWORD=test123456