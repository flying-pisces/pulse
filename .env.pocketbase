# PocketBase Environment Configuration
# Copy this to .env and fill in your values

# PocketBase Configuration
PB_ENCRYPTION_KEY=your-32-char-encryption-key-here-change-this
POCKETBASE_URL=http://localhost:8090
POCKETBASE_ADMIN_EMAIL=admin@pulse.app
POCKETBASE_ADMIN_PASSWORD=change-this-secure-password

# Database Configuration
PB_DATA_DIR=/pb/pb_data

# OAuth Configuration (for PocketBase OAuth providers)
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth
APPLE_CLIENT_ID=your-apple-service-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=/path/to/AuthKey.p8

# Production Configuration
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring
HEALTH_CHECK_INTERVAL=30s
LOG_LEVEL=info

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (for user verification and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@pulse.app

# File Storage Configuration
S3_BUCKET=pulse-app-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s